{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "incremental": true,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node"],
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "eslintrc.js"]
}